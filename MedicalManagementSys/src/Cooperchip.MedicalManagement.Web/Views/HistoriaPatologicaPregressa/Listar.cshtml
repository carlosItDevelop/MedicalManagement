@model IEnumerable<Cooperchip.MedicalManagement.Domain.Entidade.HistoriaPatologicaPregressa>

@{
    ViewBag.Title = "História Patológica Pregressa";
    ViewBag.TituloAcao = "Hist. Patol. Pregressa";
}



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-heading">
            <h3><i class="icon-check"></i> <strong>&nbsp;&nbsp;&nbsp;@ViewBag.Title</strong> </h3>
        </div>
        <div class="panel-body">

            <p>
                <button class="btn btn-success create btn-transparent" data-toggle="tooltip" data-placement="bottom" title="Adicionar - @ViewBag.TituloAcao" data-original-title="Adicionar - @ViewBag.TituloAcao"><i class="glyphicon glyphicon-plus"></i>&nbsp;&nbsp;Adicionar </button>
            </p>


            <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover evolumed">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>AÇÃO</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    <button class="btn btn-default details btn-transparent" data-id="@item.HistoriaPatologicaPregressaId" data-toggle="tooltip" data-placement="bottom" title="Detalhes - @ViewBag.TituloAcao" data-original-title="Detalhes - @ViewBag.TituloAcao"><i class="glyphicon glyphicon-file"></i></button>
                                    <button class="btn btn-danger delete btn-transparent" data-id="@item.HistoriaPatologicaPregressaId" data-toggle="tooltip" data-placement="bottom" title="Excluir Detalhes - @ViewBag.TituloAcao" data-original-title="Excluir - @ViewBag.TituloAcao"><i class="glyphicon glyphicon-trash"></i></button>
                                    <button class="btn btn-primary edit btn-transparent" data-id="@item.HistoriaPatologicaPregressaId" data-toggle="tooltip" data-placement="bottom" title="Editar - @ViewBag.TituloAcao" data-original-title="Editar - @ViewBag.TituloAcao"><i class="glyphicon glyphicon-edit"></i></button>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-style6" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.evolumed').DataTable({
                dom: 'T<"clear">lfrtip',
                tableTools: {
                    "sSwfPath": "../../myPlugins/copy_csv_xls_pdf.swf"
                }
            });
        });
        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/HistoriaPatologicaPregressa/Edit?id=" + id, function () {
                $("#modal").modal();
            });
        });
        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/HistoriaPatologicaPregressa/Details?id=" + id, function () {
                $("#modal").modal();
            });
        });
        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/HistoriaPatologicaPregressa/Delete?id=" + id, function () {
                $("#modal").modal();
            });
        });
        $(".create").click(function () {
            $("#modal").load("/HistoriaPatologicaPregressa/Create", function () {
                $("#modal").modal();
            });
        });
    </script>
}
