@model Cooperchip.Common.Identity.Model.RegisterViewModel

@{
    Layout = null;
}

@{
    ViewBag.Title = "MedicalManagement-Sys - Registro de Novo Usuário";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login | MedicalManagement-Sys - Management</title>
    <!-- Mobile specific metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1 user-scalable=no">

    <!-- Import google fonts - Heading first/ text second -->
    <link href='http://fonts.googleapis.com/css?family=Quattrocento+Sans:400,700' rel='stylesheet' type='text/css'>
    <!-- Css files -->
    <!-- Icons -->
    <link href="~/tpl/css/icons.css" rel="stylesheet" />
    <!-- Bootstrap stylesheets (included template modifications) -->
    <link href="~/tpl/css/bootstrap.css" rel="stylesheet" />
    <!-- Plugins stylesheets (all plugin custom css) -->
    <link href="~/tpl/css/plugins.css" rel="stylesheet" />
    <!-- Main stylesheets (template main css file) -->
    <link href="~/tpl/css/main.css" rel="stylesheet" />
    <!-- Custom stylesheets ( Put your own changes here ) -->
    <link href="~/tpl/css/custom.css" rel="stylesheet" />
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/tpl/img/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/tpl/img/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/tpl/img/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/tpl/img/ico/apple-touch-icon-57-precomposed.png">
    <link rel="icon" href="~/tpl/img/ico/favicon.ico" type="image/png">
    <!-- Windows8 touch icon ( http://www.buildmypinnedsite.com/ )-->
    <meta name="msapplication-TileColor" content="#3399cc" />
</head>
<body class="login-page">
    <!-- Start login container -->
    <div class="container login-container">
        <div class="login-panel panel panel-default plain animated bounceIn">
            <!-- Start .panel -->
            <div class="panel-heading">
                <h4 class="panel-title text-center">
                    <img id="logo" src="~/tpl/img/logo-dark.png" alt="MedicalManagement-Sys logo">
                </h4>
            </div>
            <div class="panel-body">


                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal mt0", role = "form" }))
                {

                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = "Digite seu Usuário" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite seu Email" })

                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-sign-in"></i></span>
                                @Html.TextBoxFor(m => m.NomeCompleto, new { @class = "form-control", placeholder = "Nome Completo" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-facebook"></i></span>
                                @Html.TextBoxFor(m => m.Facebook, new { @class = "form-control", placeholder = "Seu facebook" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-google-plus"></i></span>
                                @Html.TextBoxFor(m => m.Google, new { @class = "form-control", placeholder = "Digite seu Google+" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-twitch"></i></span>
                                @Html.TextBoxFor(m => m.Twitter, new { @class = "form-control", placeholder = "Digite seu Twitter" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-skype"></i></span>
                                @Html.TextBoxFor(m => m.Skype, new { @class = "form-control", placeholder = "Digite seu Skype" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", placeholder = "Digite seu Telefone" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua senha" })

                            </div>
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>

                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Redigite sua senha" })


                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="input-group input-icon">
                                <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                @Html.TextAreaFor(m => m.AboutMe, new { @class = "form-control", placeholder = "Informações Pessoais" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb0">
                        <div class="col-md-12">
                            <button class="btn btn-default" type="submit">Registrar</button>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <div class="checkbox">
                            <label> <input type="checkbox"><i></i> Aceito os temos e condições </label>
                        </div>
                    </div>*@

                    <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Index", "Home")">Voltar para a Home</a>


                }
            </div>
            <div class="panel-footer gray-lighter-bg bt">
                <h4 class="text-center">
                    <strong>Já tem uma conta ?</strong>
                </h4>
                <p class="text-center">
                    <a href="/Account/Login" class="btn btn-primary">Logar</a>
                </p>
            </div>
        </div>
        <!-- End .panel -->
    </div>


    <div class="container">
        <div class="footer">
            <p class="text-center">&copy;2014 / @DateTime.Now.Year - Copyright MedicalManagement-Sys. Todos os direitos reservados!</p>
        </div>
    </div>







    <!-- Javascripts -->
    <!-- Important javascript libs(put in all pages) -->
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="~/tpl/assets/js/libs/jquery-2.1.1.min.js">\x3C/script>')
    </script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script>
        window.jQuery || document.write('<script src="~/tpl/assets/js/libs/jquery-ui-1.10.4.min.js">\x3C/script>')
    </script>
    <!--[if lt IE 9]>
      <script type="text/javascript" src="~/tpl/js/libs/excanvas.min.js"></script>
      <script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <script type="text/javascript" src="~/tpl/js/libs/respond.min.js"></script>
    <![endif]-->
    <!-- Bootstrap plugins -->
    <script src="~/tpl/js/bootstrap/bootstrap.js"></script>
    <!-- Form plugins -->
    <script src="~/tpl/plugins/forms/validation/jquery.validate.js"></script>
    <script src="~/tpl/plugins/forms/validation/additional-methods.min.js"></script>
    <!-- Init plugins olny for this page -->
    <script src="~/tpl/js/pages/login.js"></script>
</body>
</html>
