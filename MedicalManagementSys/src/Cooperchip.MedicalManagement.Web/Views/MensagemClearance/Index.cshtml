@model IEnumerable<Cooperchip.MedicalManagement.Domain.Entidade.MensagemClearance>


@{
    ViewBag.Title += "Listagem de Parâmetros para Taxa de Clearance";
}


<div class="col-md-12 col-lg-12 col-sm-12 panel-collapse panel-default">




    <div class="panel-heading">
        <h4><i class="fa fa-adn"></i>&nbsp;&nbsp;&nbsp;Administração de Parâmetros para Taxa de Clearance</h4>
    </div>



    <!--/ Aqui entram os conteúdos -->

    <div class="animated fadeInRightBig">

        <br />
        <div class="alert alert-success alert-dismissable">
            <h3><i class="fa fa-align-justify"></i> <strong>Tabela com a lista dos Parâmetros para Clearance</strong></h3>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <!--/ Botão create -->
                            <a href="/Home/Index" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Voltar para a Home" data-original-title="Voltar para a Home"> <i class="glyphicon glyphicon-home"></i></a>
                            <button class="btn btn-primary createTaxaClearance" data-toggle="tooltip" data-placement="bottom" title="Adicionar Parâmetro de Taxa de Clearance" data-original-title="Adicionar Parâmetro de Taxa de Clearance"> <i class="glyphicon glyphicon-check"></i> </button>
                        </div>
                    </div>
                    <hr />
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover tablemmanagement">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Generico.Descricao)</th>
                                    <th>@Html.DisplayNameFor(model => model.Substancia)</th>
                                    <th>@Html.DisplayNameFor(model => model.ParametroInicial)</th>
                                    <th>@Html.DisplayNameFor(model => model.ParametroFinal)</th>
                                    <th>@Html.DisplayNameFor(model => model.Mensagem)</th>
                                    <th>Detalhes/Edição</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Generico.Descricao)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Substancia)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ParametroInicial)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ParametroFinal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Mensagem)</td>

                                    <td>
                                        <button class="btn btn-default btn-transparent details" data-id="@item.MensagemClearanceId" data-toggle="tooltip" data-placement="bottom" title="Detalhes do Usuário" data-original-title="Detalhes do Usuário"><i class="glyphicon glyphicon-file"></i></button>
                                        <button class="btn btn-danger btn-transparent delete" data-id="@item.MensagemClearanceId" data-toggle="tooltip" data-placement="bottom" title="Excluir Usuário" data-original-title="Excluir Usuário"><i class="glyphicon glyphicon-trash"></i></button>
                                        <button class="btn btn-primary btn-transparent edit" data-id="@item.MensagemClearanceId" data-toggle="tooltip" data-placement="bottom" title="Editar Usuário" data-original-title="Editar Usuário"><i class="glyphicon glyphicon-edit"></i></button>
                                    </td>

                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Generico.Descricao)</th>
                                    <th>@Html.DisplayNameFor(model => model.Substancia)</th>
                                    <th>@Html.DisplayNameFor(model => model.ParametroInicial)</th>
                                    <th>@Html.DisplayNameFor(model => model.ParametroFinal)</th>
                                    <th>@Html.DisplayNameFor(model => model.Mensagem)</th>

                                    <th>Detalhes/Edição</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <!--/ Aqui entram os conteúdos -->







</div>




<div class="modal fade modal-style6" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>




@section Scripts {


    <script type="text/javascript">

        $(document).ready(function () {
            $('.tablemmanagement').DataTable({
                dom: 'T<"clear">lfrtip',
                tableTools: {
                    "sSwfPath": "../../myPlugins/copy_csv_xls_pdf.swf"
                }
            });
        });

        /* ------------------------------------------------------------- */

        $(".createTaxaClearance").click(function () {
            $("#modal").load("/MensagemClearance/Create", function () {
                $("#modal").modal();
            });
        });

        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/MensagemClearance/Edit?id=" + id, function () {
                $("#modal").modal();
            });
        });

        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/MensagemClearance/Details?id=" + id, function () {
                $("#modal").modal();
            });
        });

        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/MensagemClearance/Delete?id=" + id, function () {
                $("#modal").modal();
            });
        });


    </script>


}
