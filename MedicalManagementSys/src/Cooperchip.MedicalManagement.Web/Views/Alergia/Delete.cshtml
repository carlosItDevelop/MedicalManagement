@model Cooperchip.MedicalManagement.Domain.Entidade.Alergia


@{
    ViewBag.Title = "Excluindo Alergia...";
}

@{ Layout = null;}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">MedicalManagement-Sys - @ViewBag.Title</h4>
            </div>

            <div class="modal-body">
                <div class="form-horizontal">


                    <h3 class="alert alert-danger">Tem certeza que deseja Excluir este Registro?</h3>
                    <div>

                        <hr />
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Descricao)
                            </dd>

                        </dl>

                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Excluir" class="btn btn-danger btn-transparent" />
                <input type="button" value="Cancelar" class="btn btn-default btn-transparent" data-dismiss="modal" />
            </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

