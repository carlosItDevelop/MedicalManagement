@model IEnumerable<Cooperchip.MedicalManagement.Domain.Entidade.Complicacao>



@{
    ViewBag.Title = "MedicalManagement-Sys - " + "Complicação";
    ViewBag.Model = "Complicação";
}


<p>

    <a href="/Home/Index" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Voltar para a Home" data-original-title="Voltar para a Home"> <i class="glyphicon glyphicon-home"></i></a>
    <button class="btn btn-primary create" data-toggle="tooltip" data-placement="bottom" title="Adicionar @ViewBag.Model" data-original-title="Adicionar @ViewBag.Model"> <i class="glyphicon glyphicon-user"></i> </button>

</p>


<!-- Start .row -->
<div class="row">

    <div class="col-lg-12">
        <div class="animated fadeInRightBig">
            <div class="panel panel-primary toggle">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> @ViewBag.Title</h4>
                </div>
                <div class="panel-body">
                    <table id="evolumed" class="table table-striped table-bordered dataTables_filter">


                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th class="text-center">Ação</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-default details btn-transparent" data-id="@item.ComplicacaoId" data-toggle="tooltip" data-placement="bottom" title="Detalhes - @ViewBag.Model" data-original-title="Detalhes - @ViewBag.Model"><i class="glyphicon glyphicon-file"></i></button>
                                        <button class="btn btn-danger delete btn-transparent" data-id="@item.ComplicacaoId" data-toggle="tooltip" data-placement="bottom" title="Excluir - @ViewBag.Model" data-original-title="Excluir - @ViewBag.Model"><i class="glyphicon glyphicon-trash"></i></button>
                                        <button class="btn btn-primary edit btn-transparent" data-id="@item.ComplicacaoId" data-toggle="tooltip" data-placement="bottom" title="Editar - @ViewBag.Model" data-original-title="Editar - @ViewBag.Model"><i class="glyphicon glyphicon-edit"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade modal-style6" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>




@section Scripts {
    <script type="text/javascript">
        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/Complicacao/Details?id=" + id, function () {
                $("#modal").modal();
            });
        });
        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/Complicacao/Delete?id=" + id, function () {
                $("#modal").modal();
            });
        });
        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/Complicacao/Edit?id=" + id, function () {
                $("#modal").modal();
            });
        });
        $(".create").click(function () {
            $("#modal").load("/Complicacao/Create", function () {
                $("#modal").modal();
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#evolumed').DataTable({
                dom: 'T<"clear">lfrtip',
                tableTools: {
                    "sSwfPath": "../../myPlugins/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>

}


