
<!--/ MedicamentoAjuste -->

<div class="container  col-md-12 col-lg-12 col-sm-12 panel-collapse panel-default" ng-controller="MedicamentoAjusteCtrl">

    <div class="panel-heading">
        <h4><i class="fa fa-adn"></i>&nbsp;&nbsp;&nbsp;{{titulo}}</h4>
    </div>
    <div class="panel-body">


        <form name="medicamentoAjusteForm">

            <div class="row">

                <div class="col-md-12 col-lg-12 col-sm-12 row">
                    <input class="form-control col-md-4 col-lg-4 col-sm-4" type="text" ng-model="criterioDeBusca" placeholder="O que você está buscando?" />
                </div>

                <div class="panel-body panel-default row">
                    <table ng-show="medicamentosajuste.length > 0" class="table">
                        <tr>
                            <th>Excluir?</th>
                            <th><a href="#" ng-click="ordenarPor('MedicamentoAjustesId')">ID</a></th>
                            <th><a href="#" ng-click="ordenarPor('Descricao')">Ajuste</a></th>
                            <th><a href="#" ng-click="ordenarPor('IdMedicamento')">Medicamento</a></th>
                            <th>Ação</th>
                        </tr>
                        <tbody>
                            <tr ng-class="{'selecionado negrito': medicamentoajuste.selecionado}" dir-paginate="medicamentoajuste in medicamentosajuste | filter:criterioDeBusca | orderBy:criterioDeOrdenacao:direcaoDaOrdenacao | itemsPerPage:6" pagination-id="majuste">
                                <td><input type="checkbox" ng-model="medicamentoajuste.selecionado" /></td>
                                <td class="text-left">{{medicamentoajuste.MedicamentoAjustesId}}</td>
                                <td class="text-left">{{medicamentoajuste.Descricao}}</td>
                                <td class="text-left">{{medicamentoajuste.Medicamento.Descricao}}</td>
                                <td><button class="btn btn-success" ng-click="alterarMedicamentoAjuste(medicamentoajuste)" ng-disabled=true>Editar</button></td>
                            </tr>
                        </tbody>
                        <dir-pagination-controls max-size="5" pagination-id="majuste" direction-links="true" boundary-links="true"></dir-pagination-controls>
                    </table>
                </div>


                <div class="row">

                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input id="ajuste" type="text" ng-model="medicamentoajuste.Descricao" class="form-control" name="ajuste" placeholder="Ajuste..." ng-required="true" ng-minlength="4">
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <input type="text" name="medicamento" id="medicamentoajuste" class="form-control busca-ajax-apresentacao-ajuste col-lg-4 col-md-4 col-sm-12" 
                        ng-model="medicamentoajuste.IdMedicamento" ng-required="true" placeholder="Selecione um Medicamento..." />
                    </div>

                </div>

            </div>



        </form>


        <div class="row">
            <button class="btn btn-primary" ng-click="adicionarMedicamentoAjuste(medicamentoajuste)" ng-disabled="medicamentoAjusteForm.$invalid">Adicionar Ajuste</button>
            <button class="btn btn-danger" ng-click="apagarMedicamentosAjuste(medicamentosajuste)" ng-if="isMedicamentoAjusteSelecionado(medicamentosajuste)">Apagar Ajuste</button>

            <hr />

            <div ng-show="medicamentoAjusteForm.medicamento.$dirty" ng-messages="medicamentoAjusteForm.medicamento.$error">
                <div ng-message="required" class="alert alert-danger">
                    Por favor, preencha o campo medicamento!
                </div>
            </div>

            <div ng-show="medicamentoAjusteForm.ajuste.$dirty" ng-messages="medicamentoAjusteForm.ajuste.$error">
                <div ng-message="required" class="alert alert-danger">
                    Por favor, preencha o campo Ajuste!
                </div>
                <div ng-message="minlength" class="alert alert-danger">
                    O campo ajuste do pedido deve ter no mínimo 5 caracteres.
                </div>
            </div>

        </div>

    </div>

    <hr />

    <p>{{medicamento}}</p>

</div>





