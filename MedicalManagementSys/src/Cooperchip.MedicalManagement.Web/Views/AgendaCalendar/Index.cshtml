


<div class="container panel panel-default plain toggle">

    <div class="panel-heading">
        <h4 class="panel-title"><i class="fa fa-ambulance"></i> Agenda / Calendário</h4>
    </div>

    <div class="panel-body">

        <div class="row">

            <div class="col-md-12">

                <div class="content">

                    <div ng-controller="agendaFullCalendar">
                        <!--Angular template for modal dialog code structure starts here-->
                        <script type="text/ng-template" id="modalContent.html">
                            <div class="modal-header">
                                <h3 class="modal-title">Edição de Eventos</h3>
                            </div>
                            <div class="modal-body">
                                <div style="color:red">{{Message}}</div>
                                <div class="form-group">
                                    <label>Título : </label>
                                    <input type="text" ng-model="NewEvent.Title" autofocus class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Descrição : </label>
                                    <input type="text" ng-model="NewEvent.Description" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Hora / Intervalo : </label>
                                    <span>{{NewEvent.StartAt}} - {{NewEvent.EndAt}}</span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" type="button" ng-click="ok()">Salvar</button>
                                <button class="btn btn-danger" type="button" ng-show="NewEvent.EventId > 0" ng-click="delete()">Excluir</button>
                                <button class="btn btn-warning" type="button" ng-click="cancel()">Cancelar</button>
                            </div>
                            <!--Angular modal dialog code ends here-->
                        </script>

                        <div class="row col-12">
                            <div id="calendar" ui-calendar="uiConfig.calendar" ng-model="eventSources" calendar="myCalendar"></div>
                        </div>
                        <div class="row col-12">
                            <div ng-show="SelectedEvent" class="col-12 alert alert-success" style="margin-top: 50px;">
                                <h2 style="margin-top: 0px;"> Evento Selecionado</h2>
                                <h3 style="color: #A9A50E">{{SelectedEvent.title}}</h3>
                                <p>{{SelectedEvent.description}}</p>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>
