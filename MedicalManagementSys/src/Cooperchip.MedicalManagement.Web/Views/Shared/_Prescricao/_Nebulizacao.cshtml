
<div class="col-lg-8 col-md-8 col-sm-8">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h4 class="panel-title">NEBULIZAÇÃO</h4>
        </div>
        <div class="panel-body">


            <!--/ Nebulização Medicamento -->

            <div class="col-lg-7 col-md-7 col-sm-7">

                <div class="form-group">
                    <div class="col-lg-12 col-md-12">

                        <form name="nebulizacaoForm">

                            <div class="row">

                                <br />
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Medicamento</th>
                                            <th>Gotas</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>
                                                <div class="toggle-custom">
                                                    <label class="toggle" data-on="ON" data-off="OFF">
                                                        <input type="checkbox" class="form-control" ng-model="prescricao.Berotec">
                                                        <span class="button-checkbox"></span>
                                                    </label>
                                                    <label>Berotec</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <input type="text" ng-model="prescricao.BerotecGotas" ng-disabled="isDisableCbo(prescricao.Berotec)" />
                                                </div>
                                            </td>
                                        </tr>


                                        <tr>
                                            <td>
                                                <div class="toggle-custom">
                                                    <label class="toggle" data-on="ON" data-off="OFF">
                                                        <input type="checkbox" class="form-control" ng-model="prescricao.Atrovent">
                                                        <span class="button-checkbox"></span>
                                                    </label>
                                                    <label>Atrovent</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <input type="text" ng-model="prescricao.AtroventGotas" ng-disabled="isDisableCbo(prescricao.Atrovent)" />
                                                </div>
                                            </td>
                                        </tr>


                                        <tr>
                                            <td>
                                                <div class="toggle-custom">
                                                    <label class="toggle" data-on="ON" data-off="OFF">
                                                        <input type="checkbox" class="form-control" ng-model="prescricao.Fluimucil">
                                                        <span class="button-checkbox"></span>
                                                    </label>
                                                    <label>Fluimucil</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <input type="text" ng-model="prescricao.FluimucilGotas" ng-disabled="isDisableCbo(prescricao.Fluimucil)" />
                                                </div>
                                            </td>
                                        </tr>


                                        <tr>
                                            <td>
                                                <div class="toggle-custom">
                                                    <label class="toggle" data-on="ON" data-off="OFF">
                                                        <input type="checkbox" class="form-control" ng-model="prescricao.Sf09">
                                                        <span class="button-checkbox"></span>
                                                    </label>
                                                    <label>SF a 0,9%</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <input type="text" ng-model="prescricao.Sf09Gotas" ng-disabled="isDisableCbo(prescricao.Sf09)" />
                                                </div>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>

                            </div>

                        </form>
                    </div>
                </div>

            </div>



            <!--/ Nebulização Intervalo -->

            <div class="col-lg-5 col-md-5 col-sm-5">

                <div class="form-group">
                    <h4>Intervalo</h4>
                    <hr />
                    <div class="col-lg-12 col-md-12">
                        <ul>
                            <li ng-repeat="intervalo in nebulizacaointervalos">
                                <div class="toggle-custom">
                                    <label class="toggle" data-on="ON" data-off="OFF">
                                        <input type="radio" name="idNebulizacaoIntervalo"
                                               ng-model="prescricao.NebulizacaoIntervalo"
                                               value="{{intervalo.Descricao}}"
                                               class="form-control"
                                               ng-disabled="isDisableCbo(prescricao.Berotec)
                                               && isDisableCbo(prescricao.Atrovent) &&
                                               isDisableCbo(prescricao.Fluimucil) &&
                                               isDisableCbo(prescricao.Sf09)" />
                                        <span class="button-radio"></span>
                                    </label>
                                    <label>{{intervalo.Descricao}}</label>
                                </div>

                            </li>
                        </ul>
                    </div>

               </div>
            </div>

       </div>
    </div>
</div>
