
<div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
    <div class="panel panel-info tile">
        <div class="panel-heading">
            <h4 class="panel-title">Aguardando Alta</h4>
        </div>
        <div class="panel-body pt0">
            <div class="progressbar-stats-1">
                <div class="stats">
                    @*<i class="l-basic-geolocalize-05"></i> <h2>{{((estavel+observacao)*100/total) | number:1}} %</h2>*@
                    <i class="l-basic-geolocalize-05"></i> <h2 ng-bind="(((estavel+observacao)*100/total) | number:1)+' %'"></h2>
                </div>
                <div class="progress animated-bar flat transparent progress-bar-xs mb10 mt0">
                    <div class="progress-bar progress-bar-white" role="progressbar" data-transitiongoal="63"></div>
                </div>
                <div class="comparison">
                    <p class="mb0"><i class="fa fa-arrow-circle-o-up s20 mr5 pull-left"></i> Prescrever alta</p>
                </div>
            </div>
        </div>
    </div>
</div>

