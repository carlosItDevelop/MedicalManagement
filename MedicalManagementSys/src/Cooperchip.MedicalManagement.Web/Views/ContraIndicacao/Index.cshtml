

@model IEnumerable<Cooperchip.MedicalManagement.Domain.Entidade.ContraIndicacao>

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@{
    ViewBag.Title = "MedicalManagement-Sys - Lista de Contra Indicação";
}

<p>
    <button class="btn btn-default create" data-toggle="tooltip" data-placement="bottom" title="Adicionar nova Contra Indicação" data-original-title="Adicionar nova Contra Indicação">  <i class="glyphicon glyphicon-plus-sign"></i>  </button>
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })
</p>

<!-- Start .row -->
<div class="row">
    <div class="col-lg-12">
        <div class="animated fadeInRightBig">
            <div class="panel panel-primary toggle">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> MedicalManagement-Sys - Cadastro de Contra Indicação</h4>
                </div>
                <div class="panel-body">
                    <table id="evolumed" class="table table-striped table-bordered dataTables_filter" cellspacing="0" width="100%">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Genérico</th>
                                <th>Contra Indicação</th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Genérico</th>
                                <th>Contra Indicação</th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                //var total = item.Generico.Descricao.Length / 10;
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContraIndicacaoId)
                                    </td>
                                    <td>
                                       @Html.DisplayFor(modelItem => item.Generico.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-default details" data-id="@item.ContraIndicacaoId" data-toggle="tooltip" data-placement="bottom" title="Contra Indicação - Detalhes" data-original-title="Contra Indicação - Detalhes"><i class="glyphicon glyphicon-file"></i></button>
                                        <button class="btn btn-danger delete" data-id="@item.ContraIndicacaoId" data-toggle="tooltip" data-placement="bottom" title="Contra Indicação - Excluir" data-original-title="Contra Indicação - Excluir"><i class="glyphicon glyphicon-trash"></i></button>
                                        <button class="btn btn-primary edit" data-id="@item.ContraIndicacaoId" data-toggle="tooltip" data-placement="bottom" title="Contra Indicação - Editar" data-original-title="Contra Indicação - Editar"><i class="glyphicon glyphicon-edit"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-style6" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>


@section Scripts {

    <script type="text/javascript">

        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/ContraIndicacao/Details?id=" + id, function () {
                $("#modal").modal();
            });
        });

        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/ContraIndicacao/Delete?id=" + id, function () {
                $("#modal").modal();
            });
        });

        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/ContraIndicacao/Edit?id=" + id, function () {
                $("#modal").modal();
            });
        });


        $(".create").click(function () {
            $("#modal").load("/ContraIndicacao/Create", function () {
                $("#modal").modal();
            });
        });

    </script>
    <script>
        $(document).ready(function () {
            $('#evolumed').DataTable({
                dom: 'T<"clear">lfrtip',
                tableTools: {
                    "sSwfPath": "../../myPlugins/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
}



