@model IEnumerable<Cooperchip.MedicalManagement.Domain.Entidade.TabelasBase>

@{
    ViewBag.Title = "Administração de Tabelas Bases";
}


<p>

    <button class="btn btn-default create" data-toggle="tooltip" data-placement="bottom" title="Adicionar um menu de Tabela Base" data-original-title="Adicionar um menu de Tabela Base">  <i class="glyphicon glyphicon-plus-sign"></i>  </button>
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })

</p>


<!-- Start .row -->
<div class="row">

    <div class="col-lg-12">
        <div class="animated fadeInRightBig">
            <div class="panel panel-default toggle">
                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> MedicalManagement-Sys - Cadastro de Menus / Tabelas Bases</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover dataTables-MedicalManagement">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.TabelasBaseId)</th>
                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                                <th>@Html.DisplayNameFor(model => model.Ativa)</th>
                                <th>Gerenciar Menu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                // Deixar comentado até implementar [ Mostrar Todos ]
                                //if (item.Ativa.Equals(true))
                                //{
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.TabelasBaseId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ativa)</td>

                                    <td>
                                        <a href="/@item.Controller/@item.Action" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Chamar o CRUD das Tabelas" data-original-title="Chamar o CRUD das Tabelas"><i class="glyphicon glyphicon-search"></i></a>
                                        <button class="btn btn-default details" data-id="@item.TabelasBaseId" data-toggle="tooltip" data-placement="bottom" title="Detalhes do Menu" data-original-title="Detalhes do Menu"><i class="glyphicon glyphicon-file"></i></button>
                                        <button class="btn btn-danger delete" data-id="@item.TabelasBaseId" data-toggle="tooltip" data-placement="bottom" title="Excluir Menu" data-original-title="Excruir Menu"><i class="glyphicon glyphicon-trash"></i></button>
                                        <button class="btn btn-primary edit" data-id="@item.TabelasBaseId" data-toggle="tooltip" data-placement="bottom" title="Editar Menu" data-original-title="Editar Menu"><i class="glyphicon glyphicon-edit"></i></button>
                                    </td>
                                </tr>
                                    @*}*@
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.TabelasBaseId)</th>
                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                                <th>@Html.DisplayNameFor(model => model.Ativa)</th>
                                <th>Gerenciar Menu</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade modal-style6" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>




@section Scripts {

    <script>
        $(document).ready(function () {
            $('.dataTables-MedicalManagement').DataTable({
                dom: 'T<"clear">lfrtip',
                tableTools: {
                    "sSwfPath": "../../myPlugins/copy_csv_xls_pdf.swf"
                }
            });
        });


        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/TabelasBase/Details?id=" + id, function () {
                $("#modal").modal();
            });
        });

        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/TabelasBase/Delete?id=" + id, function () {
                $("#modal").modal();
            });
        });

        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/TabelasBase/Edit?id=" + id, function () {
                $("#modal").modal();
            });
        });


        $(".create").click(function () {
            $("#modal").load("/TabelasBase/Create", function () {
                $("#modal").modal();
            });
        });

    </script>


}








